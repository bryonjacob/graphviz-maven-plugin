<project>
    <build>
        <plugins>
            <plugin>
                <groupId>us.bryon</groupId>
                <artifactId>graphviz-maven-plugin</artifactId>
                <configuration>
                    <basedir>${basedir}/src/test/resources/us/bryon/graphviz/maven/dot</basedir>
                    <includes>**/*.dot</includes>
                    <excludes>**/skip.dot</excludes>
                    <layout>dot</layout>
                    <output>svg</output>
                    <destdir>target/graphviz</destdir>
                    <dot>dot</dot>
                    <!--<mapper></mapper>-->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>